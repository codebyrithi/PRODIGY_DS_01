import seaborn as sns
import matplotlib.pyplot as plt

# Load the Iris dataset from seaborn's in-built dataset
iris = sns.load_dataset('iris')

# Display the first few rows of the dataset to understand its structure
print(iris.head())

# 1. Plotting a Bar Chart to Show the Distribution of Iris Species
plt.figure(figsize=(8, 6))
sns.countplot(data=iris, x='species', palette='Set2')
plt.title('Distribution of Iris Species')
plt.xlabel('Species')
plt.ylabel('Count')
plt.show()

# 2. Plotting Histograms to Show the Distribution of Numerical Features (e.g., Petal Length)
plt.figure(figsize=(12, 8))

# Petal Length Distribution by Species
sns.histplot(data=iris, x='petal_length', hue='species', kde=True, multiple='stack', palette='Set1')
plt.title('Distribution of Petal Length by Iris Species')
plt.xlabel('Petal Length (cm)')
plt.ylabel('Frequency')
plt.show()

# 3. Pair Plot to visualize relationships between numerical variables
sns.pairplot(iris, hue='species', palette='Set2')
plt.suptitle("Pairwise Relationship Between Features by Iris Species", y=1.02)
plt.show()

# 4. Boxplot for Sepal Length by Species (to show spread and outliers)
plt.figure(figsize=(8, 6))
sns.boxplot(data=iris, x='species', y='sepal_length', palette='Set1')
plt.title('Boxplot of Sepal Length by Iris Species')
plt.xlabel('Species')
plt.ylabel('Sepal Length (cm)')
plt.show()
